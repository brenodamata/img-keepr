<% if current_user %>
	<h3>Welcome: <%= current_user.email %></h3>
<% else %>
	<div class="jumbotron">
		<h2>Image Keepr</h2>
		<p class="lead">
			Host your images here
		</p>
	</div>
	
	<div class="row">
		<div class="plans clearfix">
			<div class="col-lg-3 col-lg-offset-3 plan">
				<h2>Free</h2>
				<div class="features">
					<ul>
						<li>Up to 10 Image Uploads</li>
						<li>Responsive design</li>
						<li>Access anywhere</li>
					</ul>
					<div>
						Price: <strong>Free</strong><br><br>
					</div>
				</div>
				<p class="pull-left">
					<%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
				</p>
			</div>
			<div class="col-lg-3 plan">
				<h2>Pro</h2>
				<div class="features">
					<ul>
						<li class='extra'>Unlimited Image Uploads</li>
						<li>Responsive design</li>
						<li>Access anywhere</li>
					</ul>
				</div>
				<div>
					Price: <strong>$2</strong><br><br>
				</div>
				<p class="pull-left">
					<%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
				</p>
			</div>

		</div>
	</div>

<% end %>